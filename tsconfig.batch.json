{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/batch-cli",
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["scripts/batch-search.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
